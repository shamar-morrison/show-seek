{
  "name": "functions",
  "scripts": {
    "lint": "eslint src/",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "migrate:revenuecat": "npm run build && node lib/scripts/migrateRevenueCatSubscribers.js",
    "repair:revenuecat-premium": "npm run build && node lib/scripts/repairRevenueCatPremiumStatus.js",
    "repair:list-descriptions": "npm run build && node lib/scripts/repairListDescriptions.js",
    "repair:list-descriptions:apply": "npm run build && node lib/scripts/repairListDescriptions.js --apply",
    "seed:default-lists": "npm run build && node lib/scripts/seedDefaultLists.js",
    "seed:default-lists:apply": "npm run build && node lib/scripts/seedDefaultLists.js --apply",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "export:lifetime": "npm run build && node lib/scripts/exportLifetimeUsers.js",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.1",
    "googleapis": "^128.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
