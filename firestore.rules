rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check authentication
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check ownership
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User data - each user can only access their own data
    match /users/{userId} {
      // Favorites collection
      match /favorites/{favoriteId} {
        allow read, write: if isOwner(userId);
      }

      // Watchlist collection
      match /watchlist/{watchlistId} {
        allow read, write: if isOwner(userId);
      }

      // Ratings collection
      match /ratings/{ratingId} {
        allow read, write: if isOwner(userId);
      }

      // Lists collection (custom user lists)
      match /lists/{listId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && request.resource.data.keys().hasAll(['name', 'items', 'createdAt'])
          && request.resource.data.name is string
          && request.resource.data.name.size() > 0
          && request.resource.data.items is map;
        allow update: if isOwner(userId)
          && request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['items', 'updatedAt', 'name', 'createdAt']);
        allow delete: if isOwner(userId)
          && resource.data.get('isCustom', false) == true;
      }

      // Episode tracking collection
      match /episode_tracking/{tvShowId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && request.resource.data.keys().hasAll(['episodes', 'metadata'])
          && request.resource.data.metadata.keys().hasAll(['tvShowName', 'lastUpdated'])
          && request.resource.data.episodes is map;
        allow update: if isOwner(userId)
          && request.resource.data.keys().hasAll(['episodes', 'metadata']);
      }

      // Favorite persons collection
      match /favorite_persons/{personId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && request.resource.data.keys().hasAll(['id', 'name', 'addedAt'])
          && request.resource.data.id is int
          && request.resource.data.name is string
          && request.resource.data.addedAt is int;
        allow delete: if isOwner(userId);
      }
    }
  }
}
