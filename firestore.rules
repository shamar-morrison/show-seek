rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check authentication
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check ownership
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User data - each user can only access their own data
    match /users/{userId} {
      // User profile document - allow users to read their own data and create during sign-up
      allow read: if isOwner(userId);
      allow create: if isOwner(userId)
        // Enforce exact allowed key set (required + optional photoURL)
        && request.resource.data.keys().hasOnly(['uid', 'displayName', 'email', 'createdAt', 'photoURL'])
        && request.resource.data.keys().hasAll(['uid', 'displayName', 'email', 'createdAt'])
        // Validate field types and values
        && request.resource.data.uid == userId
        && request.resource.data.displayName is string
        && request.resource.data.email is string
        && request.resource.data.createdAt is timestamp
        // photoURL is optional but if present must be null or string
        && (!('photoURL' in request.resource.data) || request.resource.data.photoURL == null || request.resource.data.photoURL is string);
      allow update: if isOwner(userId)
        && request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['displayName', 'photoURL', 'updatedAt', 'preferences'])
        && request.resource.data.displayName is string
        && (!('photoURL' in request.resource.data) || request.resource.data.photoURL == null || request.resource.data.photoURL is string)
        && (!('updatedAt' in request.resource.data) || request.resource.data.updatedAt is timestamp)
        // Preferences validation - must be a map with boolean autoAddToWatching
        && (!('preferences' in request.resource.data) || (
          request.resource.data.preferences is map
          && (!('autoAddToWatching' in request.resource.data.preferences) || request.resource.data.preferences.autoAddToWatching is bool)
          && (!('autoAddToAlreadyWatched' in request.resource.data.preferences) || request.resource.data.preferences.autoAddToAlreadyWatched is bool)
          && (!('blurPlotSpoilers' in request.resource.data.preferences) || request.resource.data.preferences.blurPlotSpoilers is bool)
          && (!('showMediaPreviewCards' in request.resource.data.preferences) || request.resource.data.preferences.showMediaPreviewCards is bool)
          && (!('quickMarkAsWatched' in request.resource.data.preferences) || request.resource.data.preferences.quickMarkAsWatched is bool)
        ));
      // Allow users to delete their own user document (for account deletion)
      allow delete: if isOwner(userId);
      // Favorites collection
      match /favorites/{favoriteId} {
        allow read, write: if isOwner(userId);
      }

      // Watched movies collection (tracking movie watch instances)
      match /watched_movies/{movieId} {
        allow read: if isOwner(userId);
        
        match /watches/{watchId} {
          allow read: if isOwner(userId);
          allow create: if isOwner(userId)
            && request.resource.data.keys().hasAll(['watchedAt', 'movieId'])
            && request.resource.data.watchedAt is timestamp
            && request.resource.data.movieId is string;
          allow delete: if isOwner(userId);
        }
      }

      // Watchlist collection
      match /watchlist/{watchlistId} {
        allow read, write: if isOwner(userId);
      }

      // Ratings collection
      match /ratings/{ratingId} {
        allow read, write: if isOwner(userId);
      }

      // Lists collection (custom user lists)
      match /lists/{listId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && request.resource.data.keys().hasAll(['name', 'items', 'createdAt'])
          && request.resource.data.name is string
          && request.resource.data.name.size() > 0
          && request.resource.data.items is map;
        allow update: if isOwner(userId)
          && request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['items', 'updatedAt', 'name', 'createdAt']);
        allow delete: if isOwner(userId);
      }

      // Notes collection (personal notes for movies/TV shows)
      match /notes/{noteId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          // Restrict to exactly these allowed fields
          && request.resource.data.keys().hasOnly(['userId', 'mediaType', 'mediaId', 'content', 'mediaTitle', 'posterPath', 'createdAt', 'updatedAt'])
          && request.resource.data.keys().hasAll(['userId', 'mediaType', 'mediaId', 'content', 'mediaTitle', 'createdAt', 'updatedAt'])
          // Validate userId matches authenticated user
          && request.resource.data.userId == userId
          // Validate mediaType is movie or tv
          && request.resource.data.mediaType in ['movie', 'tv']
          // Validate content is string with max 120 chars
          && request.resource.data.content is string
          && request.resource.data.content.size() <= 120
          // Validate mediaId is an integer
          && request.resource.data.mediaId is int
          // Validate mediaTitle is a string
          && request.resource.data.mediaTitle is string
          // Validate timestamps
          && request.resource.data.createdAt is timestamp
          && request.resource.data.updatedAt is timestamp
          // Validate posterPath is string or null (optional field)
          && (!('posterPath' in request.resource.data) || request.resource.data.posterPath == null || request.resource.data.posterPath is string);
        allow update: if isOwner(userId)
          && request.resource.data.userId == userId
          && request.resource.data.content is string
          && request.resource.data.content.size() <= 120;
        allow delete: if isOwner(userId);
      }

      // Episode tracking collection
      match /episode_tracking/{tvShowId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && request.resource.data.keys().hasAll(['episodes', 'metadata'])
          && request.resource.data.metadata.keys().hasAll(['tvShowName', 'lastUpdated'])
          && request.resource.data.episodes is map;
        allow update: if isOwner(userId)
          && request.resource.data.keys().hasAll(['episodes', 'metadata']);
        allow delete: if isOwner(userId);
      }

      // Favorite persons collection
      match /favorite_persons/{personId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && request.resource.data.keys().hasAll(['id', 'name', 'addedAt'])
          && request.resource.data.id is int
          && request.resource.data.name is string
          && request.resource.data.addedAt is int;
        allow delete: if isOwner(userId);
      }

      // Reminders collection
      match /reminders/{reminderId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && request.resource.data.userId == userId
          && request.resource.data.keys().hasAll([
            'userId', 'mediaType', 'mediaId', 'title', 'releaseDate',
            'reminderTiming', 'status', 'createdAt', 'updatedAt'
          ])
          && request.resource.data.mediaType is string
          && request.resource.data.mediaType in ['movie', 'tv']
          && request.resource.data.mediaId is int
          && request.resource.data.title is string
          && request.resource.data.title.size() > 0
          && request.resource.data.releaseDate is string
          && request.resource.data.releaseDate.size() > 0
          && request.resource.data.reminderTiming is string
          && request.resource.data.reminderTiming in ['1_day_before', '1_week_before', 'on_release_day']
          && request.resource.data.status is string
          && request.resource.data.status in ['active', 'cancelled']
          && request.resource.data.createdAt is int
          && request.resource.data.updatedAt is int
          // TV-specific optional fields
          && (!('tvFrequency' in request.resource.data) || request.resource.data.tvFrequency in ['every_episode', 'season_premiere'])
          && (!('nextEpisode' in request.resource.data) || request.resource.data.nextEpisode is map);
        allow update: if isOwner(userId)
          && resource.data.userId == userId
          && request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['reminderTiming', 'localNotificationId', 'notificationScheduledFor', 'status', 'updatedAt', 'nextEpisode', 'releaseDate', 'noNextEpisodeFound']);
        allow delete: if isOwner(userId)
          && resource.data.userId == userId;
      }
    }
  }
}
