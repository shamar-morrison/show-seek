rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check authentication
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check ownership
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User data - each user can only access their own data
    match /users/{userId} {
      // User profile document - allow users to read their own data and create during sign-up
      allow read: if isOwner(userId);
      allow create: if isOwner(userId)
        // Enforce exact allowed key set (required + optional photoURL)
        && request.resource.data.keys().hasOnly(['uid', 'displayName', 'email', 'createdAt', 'photoURL'])
        && request.resource.data.keys().hasAll(['uid', 'displayName', 'email', 'createdAt'])
        // Validate field types and values
        && request.resource.data.uid == userId
        && request.resource.data.displayName is string
        && request.resource.data.email is string
        && request.resource.data.createdAt is timestamp
        // photoURL is optional but if present must be null or string
        && (!('photoURL' in request.resource.data) || request.resource.data.photoURL == null || request.resource.data.photoURL is string);
      allow update: if isOwner(userId)
        && request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['displayName', 'photoURL', 'updatedAt'])
        && request.resource.data.displayName is string
        && (!('photoURL' in request.resource.data) || request.resource.data.photoURL == null || request.resource.data.photoURL is string)
        && (!('updatedAt' in request.resource.data) || request.resource.data.updatedAt is timestamp);
      // Favorites collection
      match /favorites/{favoriteId} {
        allow read, write: if isOwner(userId);
      }

      // Watchlist collection
      match /watchlist/{watchlistId} {
        allow read, write: if isOwner(userId);
      }

      // Ratings collection
      match /ratings/{ratingId} {
        allow read, write: if isOwner(userId);
      }

      // Lists collection (custom user lists)
      match /lists/{listId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && request.resource.data.keys().hasAll(['name', 'items', 'createdAt'])
          && request.resource.data.name is string
          && request.resource.data.name.size() > 0
          && request.resource.data.items is map;
        allow update: if isOwner(userId)
          && request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['items', 'updatedAt', 'name', 'createdAt']);
        allow delete: if isOwner(userId)
          && resource.data.get('isCustom', false) == true;
      }

      // Episode tracking collection
      match /episode_tracking/{tvShowId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && request.resource.data.keys().hasAll(['episodes', 'metadata'])
          && request.resource.data.metadata.keys().hasAll(['tvShowName', 'lastUpdated'])
          && request.resource.data.episodes is map;
        allow update: if isOwner(userId)
          && request.resource.data.keys().hasAll(['episodes', 'metadata']);
      }

      // Favorite persons collection
      match /favorite_persons/{personId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && request.resource.data.keys().hasAll(['id', 'name', 'addedAt'])
          && request.resource.data.id is int
          && request.resource.data.name is string
          && request.resource.data.addedAt is int;
        allow delete: if isOwner(userId);
      }

      // Reminders collection
      match /reminders/{reminderId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && request.resource.data.userId == userId
          && request.resource.data.keys().hasAll([
            'userId', 'mediaType', 'mediaId', 'title', 'releaseDate',
            'reminderTiming', 'status', 'createdAt', 'updatedAt'
          ])
          && request.resource.data.mediaType is string
          && request.resource.data.mediaType in ['movie']
          && request.resource.data.mediaId is int
          && request.resource.data.title is string
          && request.resource.data.title.size() > 0
          && request.resource.data.releaseDate is string
          && request.resource.data.releaseDate.size() > 0
          && request.resource.data.reminderTiming is string
          && request.resource.data.reminderTiming in ['1_day_before', '1_week_before', 'on_release_day']
          && request.resource.data.status is string
          && request.resource.data.status in ['active', 'cancelled']
          && request.resource.data.createdAt is int
          && request.resource.data.updatedAt is int;
        allow update: if isOwner(userId)
          && resource.data.userId == userId
          && request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['reminderTiming', 'localNotificationId', 'notificationScheduledFor', 'status', 'updatedAt']);
        allow delete: if isOwner(userId)
          && resource.data.userId == userId;
      }
    }
  }
}
